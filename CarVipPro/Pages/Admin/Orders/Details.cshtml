@page
@model CarVipPro.APrenstationLayer.Pages.Admin.Orders.DetailsModel
@{
    ViewData["Title"] = $"Chi tiết đơn hàng #{Model.Order?.Id}";
    Layout = "_LayoutAdmin";
}

<div class="container-fluid animate__animated animate__fadeIn">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-light">
            <i class="bi bi-receipt-cutoff text-warning"></i> Chi tiết Đơn hàng #@Model.Order?.Id
        </h2>
        <a asp-page="/Admin/Orders/Index" class="btn btn-gradient px-4 py-2 shadow-sm">
            <i class="bi bi-arrow-left-short me-1"></i> Quay lại
        </a>
    </div>

    <!-- Card Detail -->
    <div class="card border-0 shadow-lg rounded-4" style="background-color:#1e293b;">
        <div class="card-body">
            @if (!string.IsNullOrEmpty(Model.Error))
            {
                <div class="alert alert-danger mb-0">
                    <i class="bi bi-exclamation-triangle-fill me-1"></i>@Model.Error
                </div>
            }
            else if (Model.Order == null)
            {
                <div class="alert alert-warning mb-0">
                    <i class="bi bi-info-circle me-1"></i>Không tìm thấy đơn hàng.
                </div>
            }
            else
            {
                <!-- Info blocks -->
                <div class="row g-3 mb-4">
                    <!-- Customer -->
                    <div class="col-lg-4">
                        <div class="card border-0 h-100 rounded-3" style="background-color:#0f172a;">
                            <div class="card-body">
                                <div class="text-uppercase text-secondary small mb-2">Khách hàng</div>
                                <div class="text-light fw-semibold">@Model.Order.CustomerName</div>
                                <div class="text-muted small">
                                    <i class="bi bi-envelope me-1"></i>@Model.Order.CustomerEmail
                                </div>
                                @if (!string.IsNullOrWhiteSpace(Model.Order.CustomerPhone))
                                {
                                    <div class="text-muted small">
                                        <i class="bi bi-telephone me-1"></i>@Model.Order.CustomerPhone
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                    <!-- Meta -->
                    <div class="col-lg-8">
                        <div class="card border-0 h-100 rounded-3" style="background-color:#0f172a;">
                            <div class="card-body">
                                <div class="row gy-3 gx-4">
                                    <div class="col-md-3">
                                        <div class="text-uppercase text-secondary small">Thời gian</div>
                                        <div class="text-light">@Model.Order.DateTime.ToString("dd/MM/yyyy HH:mm")</div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="text-uppercase text-secondary small">Thanh toán</div>
                                        <div class="text-light">@Model.Order.PaymentMethod</div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="text-uppercase text-secondary small">Trạng thái</div>
                                        @{
                                            var status = Model.Order.Status?.ToUpperInvariant() ?? "";
                                            var badgeClass = status switch
                                            {
                                                "COMPLETE" => "bg-success",
                                                "PENDING" => "bg-warning text-dark",
                                                "CANCELED" => "bg-danger",
                                                _ => "bg-secondary"
                                            };
                                        }
                                        <span class="badge @badgeClass px-3 py-2">@status</span>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="text-uppercase text-secondary small">Tổng</div>
                                        <div class="text-info fw-semibold">@Model.Order.Total.ToString("N0")</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Product table -->
                <h5 class="text-light mb-3">
                    <i class="bi bi-box-seam me-2 text-primary"></i>Sản phẩm
                </h5>
                <div class="card border-0 shadow-sm rounded-3" style="background-color:#0b1220;">
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-dark table-hover align-middle m-0">
                                <thead style="background-color:#1e3a8a;">
                                    <tr>
                                        <th>Model</th>
                                        <th>Màu</th>
                                        <th class="text-end">Đơn giá ước tính</th>
                                        <th class="text-end">Số lượng</th>
                                        <th class="text-end">Thành tiền</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var d in Model.Order.Details)
                                    {
                                        <tr class="animate__animated animate__fadeInUp">
                                            <td>
                                                <div class="fw-semibold text-light">@d.VehicleModel</div>
                                                <div class="text-secondary small">@d.CompanyName • @d.CategoryName</div>
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrWhiteSpace(d.Color))
                                                {
                                                    <span class="badge bg-gradient px-3 py-2"
                                                          style="background-color:@GetColorBadge(d.Color);color:#0f172a;">
                                                        @d.Color
                                                    </span>
                                                }
                                                else
                                                {

                                                    <span class="text-secondary">-</span>
                                                }
                                            </td>
                                            <td class="text-end text-info fw-semibold">@d.UnitPriceEstimated.ToString("N0")</td>
                                            <td class="text-end">@d.Quantity</td>
                                            <td class="text-end fw-semibold">@d.TotalPrice.ToString("N0")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@functions {
    // Reuse style mapping giống trang ElectricVehicle (màu badge theo tên)
    private string GetColorBadge(string? color)
    {
        if (string.IsNullOrWhiteSpace(color)) return "#475569"; // xám
        return color.ToLower() switch
        {
            "đen" => "#0f172a",
            "trắng" => "#f8fafc",
            "xám" => "#64748b",
            "đỏ" => "#ef4444",
            "xanh" => "#22d3ee",
            "bạc" => "#d1d5db",
            "kem" => "#fde68a",
            _ => "#6366f1"
        };
    }
}