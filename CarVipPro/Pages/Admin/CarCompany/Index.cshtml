@page
@model CarVipPro.APrenstationLayer.Pages.Admin.CarCompany.IndexModel
@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Quản lý hãng xe";
}

<div class="container-fluid animate__animated animate__fadeIn">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-indigo"><i class="bi bi-building"></i> Danh sách Hãng xe</h2>
        <a asp-page="Create" class="btn btn-primary shadow-sm px-4 py-2">
            <i class="bi bi-plus-circle me-2"></i> Thêm hãng mới
        </a>
    </div>

    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-body">
            <table class="table table-hover align-middle text-center">
                <thead class="bg-gradient bg-indigo text-white">
                    <tr>
                        <th>Tên hãng</th>
                        <th>Mô tả</th>
                        <th>Trạng thái</th>
                        <th>Số lượng xe điện</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.CarCompanies == null || !Model.CarCompanies.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-muted py-4"><i class="bi bi-info-circle"></i> Chưa có hãng xe nào được thêm.</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var c in Model.CarCompanies)
                        {
                            <tr class="animate__animated animate__fadeInUp">
                                <td class="fw-semibold">@c.CatalogName</td>
                                <td>@c.Description</td>
                                <td>
                                    @if (c.IsActive)
                                    {
                                        <span class="badge bg-success px-3 py-2">Hoạt động</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary px-3 py-2">Ngừng</span>
                                    }
                                </td>
                                <td>@c.ElectricVehicleCount</td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-page="Update" asp-route-id="@c.Id" class="btn btn-sm btn-warning text-white shadow-sm">
                                            <i class="bi bi-pencil-square"></i> Sửa
                                        </a>
                                        <a asp-page="Delete" asp-route-id="@c.Id" class="btn btn-sm btn-danger shadow-sm ms-1">
                                            <i class="bi bi-trash"></i> Xóa
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>