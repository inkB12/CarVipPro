@page
@model CarVipPro.APrenstationLayer.Pages.Admin.CarCompany.IndexModel
@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Quản lý hãng xe";
}

<div class="container-fluid animate__animated animate__fadeIn">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-light">
            <i class="bi bi-building text-primary"></i> Danh sách Hãng Xe
        </h2>
        <a asp-page="Create" class="btn btn-gradient px-4 py-2 shadow-sm">
            <i class="bi bi-plus-circle me-2"></i> Thêm hãng mới
        </a>
    </div>

    <div class="card border-0 shadow-lg rounded-4" style="background-color:#1e293b;">
        <div class="card-body">
            <table class="table table-dark table-hover align-middle text-center mb-0">
                <thead style="background-color:#312e81;">
                    <tr>
                        <th>Tên hãng</th>
                        <th>Mô tả</th>
                        <th>Trạng thái</th>
                        <th>Số lượng xe điện</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.CarCompanies == null || !Model.CarCompanies.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-muted py-4">
                                <i class="bi bi-info-circle"></i> Chưa có hãng xe nào được thêm.
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var c in Model.CarCompanies)
                        {
                            <tr class="animate__animated animate__fadeInUp">
                                <td class="fw-semibold text-light">@c.CatalogName</td>
                                <td class="text-secondary">@c.Description</td>
                                <td>
                                    @if (c.IsActive)
                                    {
                                        <span class="badge bg-success bg-gradient px-3 py-2">Hoạt động</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary bg-gradient px-3 py-2">Ngừng</span>
                                    }
                                </td>
                                <td>@c.ElectricVehicleCount</td>
                                <td>
                                    <a asp-page="Update" asp-route-id="@c.Id" class="btn btn-sm btn-warning text-white me-1 shadow-sm">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <a asp-page="Delete" asp-route-id="@c.Id" class="btn btn-sm btn-danger shadow-sm">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
