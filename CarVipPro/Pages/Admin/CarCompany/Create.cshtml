@page
@model CarVipPro.APrenstationLayer.Pages.Admin.CarCompany.CreateModel
@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Thêm hãng xe mới";
}

<h3>➕ Thêm Hãng Xe</h3>
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <div>@error.ErrorMessage</div>
        }
    </div>
}

<form method="post" class="mt-3">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <div class="mb-3">
        <label class="form-label fw-bold">Tên hãng xe</label>
        <input asp-for="Company.CatalogName" class="form-control" />
        <span asp-validation-for="Company.CatalogName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label fw-bold">Mô tả</label>
        <textarea asp-for="Company.Description" class="form-control"></textarea>
        <span asp-validation-for="Company.Description" class="text-danger"></span>
    </div>

    <div class="form-check mb-3">
        <input asp-for="Company.IsActive" class="form-check-input" />
        <label class="form-check-label">Đang hoạt động</label>
    </div>

    <button type="submit" class="btn btn-primary"><i class="bi bi-save"></i> Lưu</button>
    <a asp-page="Index" class="btn btn-secondary">Hủy</a>
</form>