@page
@model CarVipPro.APrenstationLayer.Pages.Admin.VehicleCategory.CreateModel
@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Thêm loại xe";
}

<div class="container mt-4">
    <h3 class="mb-4"><i class="bi bi-tags"></i> Thêm Loại Xe Mới</h3>
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <div>@error.ErrorMessage</div>
            }
        </div>
    }

    <form method="post" class="mt-3">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="mb-3">
            <label class="form-label fw-bold">Tên loại xe</label>
            <input asp-for="Category.CategoryName" class="form-control" />
            <span asp-validation-for="Category.CategoryName" class="text-danger"></span>
        </div>

        <div class="form-check mb-3">
            <input asp-for="Category.IsActive" class="form-check-input" />
            <label class="form-check-label">Đang hoạt động</label>
        </div>

        <button type="submit" class="btn btn-primary"><i class="bi bi-save"></i> Lưu</button>
        <a asp-page="Index" class="btn btn-secondary">Hủy</a>
    </form>
</div>
