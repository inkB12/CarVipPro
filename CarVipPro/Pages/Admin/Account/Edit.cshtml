@page "{id:int}"
@model CarVipPro.APrenstationLayer.Pages.Admin.Accounts.EditModel
@{
    ViewData["Title"] = "Cập nhật tài khoản";
    Layout = "_LayoutAdmin";
}
<div class="container-fluid animate__animated animate__fadeIn">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-light">
            <i class="bi bi-pencil-square text-warning"></i> Cập nhật tài khoản
        </h2>
        <a asp-page="Index" class="btn btn-outline-light"><i class="bi bi-arrow-left-short"></i> Quay lại</a>
    </div>

    <div class="card border-0 shadow-lg rounded-4" style="background-color:#1e293b;">
        <div class="card-body">
            @if (!string.IsNullOrEmpty(Model.Error))
            {
                <div class="alert alert-danger">@Model.Error</div>
            }
            @if (!string.IsNullOrEmpty(Model.Info))
            {
                <div class="alert alert-success">@Model.Info</div>
            }

            <form method="post" class="row g-3">
                <input type="hidden" asp-for="Input.Id" />
                <div class="col-md-4">
                    <label class="form-label">Email</label>
                    <input class="form-control" asp-for="Input.Email" required />
                </div>
                <div class="col-md-4">
                    <label class="form-label">Họ tên</label>
                    <input class="form-control" asp-for="Input.FullName" required />
                </div>
                <div class="col-md-4">
                    <label class="form-label">Phone</label>
                    <input class="form-control" asp-for="Input.Phone" />
                </div>
                <div class="col-md-4">
                    <label class="form-label">Role</label>
                    <select class="form-select" asp-for="Input.Role">
                        <option>Staff</option>
                        <option>Manager</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <label class="form-label">Mật khẩu mới (để trống nếu không đổi)</label>
                    <input class="form-control" asp-for="NewPassword" type="password" />
                </div>
                <div class="col-md-4">
                    <label class="form-label">Trạng thái</label><br />
                    <input class="form-check-input" type="checkbox" asp-for="Input.IsActive" />
                    <span class="ms-2">Active</span>
                </div>

                <div class="col-12 d-flex justify-content-end">
                    <button type="submit" class="btn btn-gradient px-4">
                        <i class="bi bi-save me-1"></i> Lưu thay đổi
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
