@using CarVipPro.APrenstationLayer.Infrastructure
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CarVipPro</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CarVipPro.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">CarVipPro</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        @{
                            var ss = HttpContextAccessor?.HttpContext?.Session;
                            var isAuth = ss?.GetInt32(SessionKeys.UserId) != null;
                            var name = ss?.GetString(SessionKeys.Name) ?? ss?.GetString(SessionKeys.Email);
                            var role = ss?.GetString(SessionKeys.Role);
                        }

                    <ul class="navbar-nav flex-grow-1">
                        @if (isAuth)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                            </li>
                            
                        }
                    </ul>

                
                    <ul class="navbar-nav ms-auto">
                        @if (isAuth)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/Staff/DriveTest/SearchCustomer">Lái thử</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/Staff/Vehicles/Index">Tìm xe</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" href="/Staff/Cart">Đặt xe</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/Staff/Orders/Index">Orders</a>
                            </li>

                            <li class="nav-item me-2 d-flex align-items-center">
                                <span class="navbar-text">Hello, @name @((!string.IsNullOrWhiteSpace(role)) ? $"({role})" : "")</span>
                            </li>

                            <li class="nav-item">
                                <form method="post" asp-page="/Auth/Logout" class="d-inline">
                                    <button type="submit" class="btn btn-outline-danger btn-sm">Logout</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-outline-primary btn-sm me-2" asp-page="/Auth/Login">Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2025 - CarVipPro - <a asp-area="" asp-page="/Privacy">Privacy</a>
    </div>
</footer>

<!-- Chỉ giữ bootstrap/js chung -->
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
