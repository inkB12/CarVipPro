<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CarVipPro Admin</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/animate.css@4.1.1/animate.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet" />

    <style>
        :root {
            --bg-dark: #0f172a;
            --bg-card: #1e293b;
            --text-light: #e2e8f0;
            --primary: #6366f1;
            --secondary: #8b5cf6;
            --accent: #22d3ee;
        }

        body {
            background-color: var(--bg-dark);
            color: var(--text-light);
            font-family: "Poppins", sans-serif;
            overflow-x: hidden;
        }

        /* Sidebar */
        .sidebar {
            width: 250px;
            height: 100vh;
            position: fixed;
            background: linear-gradient(180deg, #111827, #1e1b4b);
            color: #cbd5e1;
            padding-top: 1rem;
        }

            .sidebar h4 {
                color: white;
                font-weight: 600;
            }

            .sidebar .nav-link {
                color: #a5b4fc;
                display: flex;
                align-items: center;
                border-radius: 8px;
                margin: 5px 10px;
                padding: 10px 15px;
                transition: all 0.25s;
            }

                .sidebar .nav-link:hover,
                .sidebar .nav-link.active {
                    background-color: rgba(99, 102, 241, 0.2);
                    color: #fff;
                    transform: translateX(5px);
                }

                .sidebar .nav-link i {
                    margin-right: 10px;
                    font-size: 1.3rem;
                }

        /* Main content */
        .main-content {
            margin-left: 250px;
            padding: 25px 40px;
            background-color: var(--bg-dark);
            min-height: 100vh;
        }

        /* Navbar */
        .navbar {
            background-color: var(--bg-card);
            border-radius: 10px;
            padding: 12px 20px;
            margin-bottom: 20px;
            display: flex;
            justify-content: flex-end;
            align-items: center;
        }

            .navbar .avatar {
                width: 38px;
                height: 38px;
                border-radius: 50%;
                object-fit: cover;
                border: 2px solid var(--accent);
            }

        /* Card */
        .card {
            background-color: var(--bg-card);
            border: none;
            border-radius: 12px;
            color: var(--text-light);
            transition: all 0.3s ease;
        }

            .card:hover {
                transform: translateY(-5px);
                box-shadow: 0 4px 15px rgba(99, 102, 241, 0.3);
            }

        /* Buttons */
        .btn-gradient {
            background: linear-gradient(90deg, var(--primary), var(--secondary));
            color: #fff;
            border: none;
        }

            .btn-gradient:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 15px rgba(99, 102, 241, 0.4);
            }

        .btn-warning {
            background: linear-gradient(90deg, #f59e0b, #fbbf24);
            color: #000;
            border: none;
        }

        .btn-danger {
            background: linear-gradient(90deg, #ef4444, #dc2626);
            border: none;
            color: #fff;
        }

        /* Tables */
        table {
            color: var(--text-light);
        }

        thead {
            background: rgba(99, 102, 241, 0.2);
            color: #c7d2fe;
        }

        tbody tr:hover {
            background-color: rgba(255, 255, 255, 0.05);
        }

        /* Input forms */
        input, textarea, select {
            background-color: #1e293b !important;
            color: var(--text-light) !important;
            border: 1px solid #334155;
        }

            input:focus, textarea:focus, select:focus {
                border-color: var(--accent);
                box-shadow: 0 0 5px var(--accent);
            }
    </style>
</head>
<body>
    <div class="sidebar">
        <h4 class="text-center mb-4">⚡ CarVipPro</h4>
        <nav class="nav flex-column">
            <a class="nav-link @(ViewData["Title"] == "Bảng điều khiển quản trị" ? "active" : "")" asp-page="/Admin/Index"><i class="bx bx-home"></i> Dashboard</a>
            <a class="nav-link" asp-page="/Admin/Account/Index"><i class="bx bx-user"></i> Staff Account</a>
            <a class="nav-link" asp-page="/Admin/CarCompany/Index"><i class="bx bx-building"></i> Hãng xe</a>
            <a class="nav-link" asp-page="/Admin/ElectricVehicle/Index"><i class="bx bx-bolt-circle"></i> Xe điện</a>
            <a class="nav-link" asp-page="/Admin/VehicleCategory/Index"><i class="bx bx-category"></i> Loại xe</a>
            <a class="nav-link" asp-page="/Admin/Orders/Index"><i class="bx bx-shopping-bag"></i> Orders</a>
            <a class="nav-link" asp-page="/Admin/DriveTest/Schedules"><i class="bx bx-shopping-bag"></i> Lái thử</a>

        </nav>
    </div>

    <div class="main-content">
        <div class="navbar">
            <img src="https://i.pravatar.cc/40" alt="Admin Avatar" class="avatar" />
        </div>
        <div class="content-body animate__animated animate__fadeIn">
            @RenderBody()
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    @RenderSection("Scripts", required: false)

    @section Scripts {
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
    }
</body>
</html>
