<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CarVipPro Admin</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/animate.css@4.1.1/animate.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet" />

    <style>
        body {
            background-color: #f7f8fa;
            font-family: "Poppins", sans-serif;
            overflow-x: hidden;
        }

        /* Sidebar */
        .sidebar {
            width: 250px;
            height: 100vh;
            position: fixed;
            background: linear-gradient(180deg, #4f46e5, #6366f1);
            color: white;
            padding-top: 1rem;
            transition: all 0.3s ease-in-out;
        }

            .sidebar .nav-link {
                color: #e0e0ff;
                font-weight: 500;
                display: flex;
                align-items: center;
                transition: 0.2s;
                border-radius: 8px;
                margin: 5px 10px;
                padding: 10px 15px;
            }

                .sidebar .nav-link:hover, .sidebar .nav-link.active {
                    background: rgba(255, 255, 255, 0.15);
                    color: #fff;
                    transform: translateX(4px);
                }

                .sidebar .nav-link i {
                    margin-right: 10px;
                    font-size: 1.2rem;
                }

        /* Main */
        .main-content {
            margin-left: 250px;
            padding: 20px 40px;
        }

        /* Navbar */
        .navbar {
            background: white;
            padding: 12px 20px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
            border-radius: 10px;
            margin-bottom: 20px;
        }

            .navbar .search-box input {
                border: none;
                background: #f0f2f5;
                border-radius: 20px;
                padding: 8px 15px;
                width: 220px;
            }

            .navbar .avatar {
                width: 35px;
                height: 35px;
                border-radius: 50%;
                object-fit: cover;
            }

        /* Card Animation */
        .card {
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }

            .card:hover {
                transform: translateY(-3px);
                box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            }

        /* Chart Container */
        #adminChart {
            max-height: 320px;
        }

        /* Spinner */
        .spinner-border {
            width: 3rem;
            height: 3rem;
        }

        .btn-gradient {
            background: linear-gradient(90deg, #6366f1, #8b5cf6);
            color: white;
            border: none;
            transition: 0.3s;
        }

            .btn-gradient:hover {
                background: linear-gradient(90deg, #4f46e5, #7c3aed);
                transform: translateY(-1px);
                box-shadow: 0 4px 10px rgba(99, 102, 241, 0.3);
            }

        .bg-indigo {
            background-color: #6366f1 !important;
        }

        .bg-purple {
            background-color: #8b5cf6 !important;
        }

        .btn-warning {
            background: linear-gradient(90deg, #f59e0b, #fbbf24);
            border: none;
        }

            .btn-warning:hover {
                background: linear-gradient(90deg, #d97706, #f59e0b);
                transform: translateY(-1px);
            }

        .btn-danger {
            background: linear-gradient(90deg, #ef4444, #dc2626);
            border: none;
        }

            .btn-danger:hover {
                background: linear-gradient(90deg, #b91c1c, #ef4444);
                transform: translateY(-1px);
            }

        .btn-group .btn {
            transition: all 0.2s ease-in-out;
        }

    </style>
</head>
<body>

    <!-- Sidebar -->
    <div class="sidebar d-flex flex-column">
        <h4 class="text-center text-white fw-bold mb-4">🚗 CarVipPro</h4>
        <nav class="nav flex-column">
            <a class="nav-link @(ViewData["Title"] == "Bảng điều khiển quản trị" ? "active" : "")" asp-page="/Admin/Index"><i class="bx bx-home"></i> Dashboard</a>
            <a class="nav-link" asp-page="/Admin/CarCompany/Index"><i class="bx bx-building"></i> Hãng xe</a>
            <a class="nav-link" asp-page="/Admin/ElectricVehicle/Index"><i class="bx bx-bolt-circle"></i> Xe điện</a>
            <a class="nav-link" asp-page="/Admin/VehicleCategory/Index"><i class="bx bx-category"></i> Loại xe</a>
        </nav>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <div class="navbar d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center gap-3">
                <i class="bi bi-bell fs-5 text-secondary"></i>
                <img src="https://i.pravatar.cc/40" alt="user" class="avatar">
            </div>
        </div>

        <div class="content-body animate__animated animate__zoomIn">
            @RenderBody()
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    @RenderSection("Scripts", required: false)

    @section Scripts {
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
    }
</body>
</html>
