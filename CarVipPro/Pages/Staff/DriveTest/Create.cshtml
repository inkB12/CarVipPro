@page
@model CarVipPro.APrenstationLayer.Pages.Staff.DriveTest.CreateModel
@{
    ViewData["Title"] = "Đặt lịch lái thử";
    Layout = "_LayoutStaff";
}

<div class="drive-form-container">
    <h2 class="page-title">🚗 Đặt lịch lái thử</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert-success">@TempData["SuccessMessage"]</div>
    }

    @if (Model.Customer != null)
    {
        <div class="customer-card">
            <h3>👤 Khách hàng</h3>
            <p><strong>@Model.Customer.FullName</strong></p>
            <p>📧 @Model.Customer.Email</p>
            <p>📞 @Model.Customer.Phone</p>
        </div>

        <form id="create-form" method="post" class="booking-form">
            <input type="hidden" asp-for="CustomerId" />

            <div class="form-row">
                <label>Hãng xe:</label>
                <select asp-for="SelectedCompanyId" id="company-select" required>
                    <option value="">-- Chọn hãng xe --</option>
                    @foreach (var c in Model.CarCompanies)
                    {
                        <option value="@c.Id">@c.CatalogName</option>
                    }
                </select>
            </div>

            <div class="form-row">
                <label>Model xe:</label>
                <select asp-for="SelectedVehicleId" id="vehicle-select" required>
                    <option value="">-- Chọn model --</option>
                    @foreach (var v in Model.Vehicles)
                    {
                        <option value="@v.Id">@v.Model (@v.Color)</option>
                    }
                </select>
            </div>

            <div class="form-row">
                <label>Ngày lái thử:</label>
                <input asp-for="SelectedDate" id="date-select" type="date" required />
            </div>

            <div id="schedule-container" class="schedule-box"></div>

            <div class="form-row">
                <label>Giờ bắt đầu:</label>
                <input asp-for="CreateDto.StartTime" type="time" required />
            </div>
            <div class="form-row">
                <label>Giờ kết thúc:</label>
                <input asp-for="CreateDto.EndTime" type="time" required />
            </div>

            <div class="btn-wrapper">
                <button type="submit" class="btn-submit">✅ Đặt lịch</button>
            </div>
        </form>

        @if (!string.IsNullOrEmpty(Model.Message))
        {
            <p class="text-danger mt-2">@Model.Message</p>
        }
    }
    else
    {
        <p class="text-danger">Không tìm thấy khách hàng.</p>
    }
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.min.js"></script>
    <script>
        const connection = new signalR.HubConnectionBuilder().withUrl("/hubs/notify").build();
        connection.start();

        connection.on("ReceiveDriveScheduleAdded", () => loadScheduleList());

        async function loadScheduleList() {
            const vehicleId = document.getElementById("vehicle-select").value;
            const date = document.getElementById("date-select").value;
            const container = document.getElementById("schedule-container");
            if (!vehicleId || !date) { container.innerHTML = ""; return; }

            const res = await fetch(`/Staff/DriveTest/Create?handler=SchedulePartial&vehicleId=${vehicleId}&date=${date}`);
            container.innerHTML = await res.text();
        }

        document.getElementById("vehicle-select").addEventListener("change", loadScheduleList);
        document.getElementById("date-select").addEventListener("change", loadScheduleList);
    </script>

    <style>
        /* ==== Tổng thể ==== */
        body {
            background-color: #f8f9fa;
        }

        .drive-form-container {
            max-width: 700px;
            margin: 30px auto;
            background: #fff;
            border-radius: 12px;
            padding: 30px 40px;
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.08);
        }

        .page-title {
            font-size: 1.5rem;
            font-weight: 600;
            margin-bottom: 1rem;
            display: flex;
            align-items: center;
            gap: 8px;
            color: #2a2a2a;
        }

        /* ==== Thông tin khách hàng ==== */
        .customer-card {
            background: #f0f4ff;
            border-left: 5px solid #007bff;
            border-radius: 8px;
            padding: 15px 20px;
            margin-bottom: 20px;
            font-size: 0.95rem;
        }

        /* ==== Form ==== */
        .booking-form {
            display: flex;
            flex-direction: column;
            gap: 14px;
        }

        .form-row {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

            .form-row label {
                flex: 0 0 30%;
                font-weight: 500;
                color: #333;
            }

            .form-row input,
            .form-row select {
                flex: 1;
                padding: 8px 10px;
                border: 1px solid #ccc;
                border-radius: 6px;
                font-size: 0.95rem;
            }

        /* ==== Lịch lái thử ==== */
        .schedule-box {
            background: #f9f9f9;
            border: 1px dashed #ccc;
            border-radius: 8px;
            padding: 10px 15px;
            font-size: 0.9rem;
        }

        /* ==== Button ==== */
        .btn-wrapper {
            display: flex;
            justify-content: flex-end;
            margin-top: 10px;
        }

        .btn-submit {
            background-color: #007bff;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 8px;
            cursor: pointer;
            font-weight: 500;
            transition: background 0.25s;
        }

            .btn-submit:hover {
                background-color: #0056b3;
            }

        /* ==== Alert ==== */
        .alert-success {
            background: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
            padding: 10px 15px;
            border-radius: 6px;
            margin-bottom: 10px;
        }
    </style>
}
