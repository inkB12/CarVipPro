@page
@model CarVipPro.APrenstationLayer.Pages.Staff.Order.CreateModel
@{
    ViewData["Title"] = "Booking & Pay";
}
<h2 class="mb-3">Staff: Đặt xe & Thanh toán</h2>

<form method="post" class="card p-3">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row g-3">
        <div class="col-md-4">
            <label asp-for="Input.CustomerId" class="form-label">Customer ID</label>
            <input asp-for="Input.CustomerId" class="form-control" />
            <span asp-validation-for="Input.CustomerId" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label asp-for="Input.PaymentMethod" class="form-label">Payment</label>
            <select asp-for="Input.PaymentMethod" class="form-select">
                <option value="CASH">CASH</option>
                <option value="MOMO">MOMO</option>
                <option value="INSTALLMENT">INSTALLMENT</option>
            </select>
            <span asp-validation-for="Input.PaymentMethod" class="text-danger"></span>
        </div>
    </div>

    <hr />
    <h5>Item</h5>
    <div class="row g-3">
        <div class="col-md-5">
            <label asp-for="Input.ElectricVehicleId" class="form-label">EV Id</label>
            <input asp-for="Input.ElectricVehicleId" class="form-control" />
            <span asp-validation-for="Input.ElectricVehicleId" class="text-danger"></span>
        </div>
        <div class="col-md-3">
            <label asp-for="Input.Quantity" class="form-label">Quantity</label>
            <input asp-for="Input.Quantity" class="form-control" />
            <span asp-validation-for="Input.Quantity" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="Input.TotalPrice" class="form-label">Line Total (optional)</label>
            <input asp-for="Input.TotalPrice" class="form-control" />
            <small class="text-muted">Để trống = EV.Price * Qty</small>
        </div>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-success">Tạo & Thanh toán</button>
        <a asp-page="/Index" class="btn btn-secondary">Huỷ</a>
    </div>

    @if (!string.IsNullOrEmpty(Model.Error))
    {
        <div class="text-danger mt-2">@Model.Error</div>
    }
    @if (Model.OrderId > 0)
    {
        <div class="alert alert-success mt-2">
            Tạo đơn thành công! OrderId = @Model.OrderId, Total = @Model.OrderTotal
        </div>
    }
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
