@page
@model CarVipPro.APrenstationLayer.Pages.Staff.Orders.IndexModel
@{
    ViewData["Title"] = "Quản lý đơn hàng";
    Layout = "_Layout";
}

<style>
    .card-soft {
        border: 1px solid #eee;
        border-radius: 12px;
        box-shadow: 0 4px 16px rgba(0,0,0,.04);
    }

    .section-title {
        font-weight: 700;
        margin: 0;
    }

    .status-pill {
        padding: .25rem .6rem;
        border-radius: 999px;
        font-size: .85rem;
        border: 1px solid #e5e7eb;
    }

    .status-complete {
        background: #e8f7ef;
        color: #0a7c3a;
        border-color: #bfe8cf;
    }

    .status-pending {
        background: #fff7e6;
        color: #8a5b00;
        border-color: #ffe0a6;
    }

    .status-canceled {
        background: #fde8e8;
        color: #b42318;
        border-color: #f5b5b5;
    }
</style>

<div class="card card-soft">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h3 class="section-title"><i class="fa fa-clipboard-list me-2"></i>Đơn hàng</h3>
        </div>

        <form method="get" class="row g-2 mb-3">
            <div class="col-md-4">
                <input name="q" value="@Model.Q" class="form-control" placeholder="Tìm theo tên khách / email / OrderId..." />
            </div>
            <div class="col-md-3">
                <select name="status" class="form-select">
                    <option value="">Tất cả trạng thái</option>
                    <option value="PENDING" selected="@(Model.Status == "PENDING")">PENDING</option>
                    <option value="COMPLETE" selected="@(Model.Status == "COMPLETE")">COMPLETE</option>
                    <option value="CANCELED" selected="@(Model.Status == "CANCELED")">CANCELED</option>
                </select>
            </div>
            <div class="col-md-3">
                <button class="btn btn-primary" type="submit"><i class="fa fa-filter me-1"></i>Lọc</button>
                <a class="btn btn-outline-secondary ms-2" href="/Staff/Orders/Index"><i class="fa fa-rotate-left me-1"></i>Xóa lọc</a>
            </div>
        </form>

        @if (!string.IsNullOrEmpty(Model.Error))
        {
            <div class="alert alert-danger"><i class="fa fa-triangle-exclamation me-1"></i>@Model.Error</div>
        }

        @if (Model.Items.Count == 0)
        {
            <div class="text-center py-4">
                <div class="mb-2"><i class="fa fa-inbox fa-2x text-muted"></i></div>
                <div class="text-muted">Chưa có đơn hàng.</div>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead>
                        <tr class="text-muted small">
                            <th style="width:90px">Order</th>
                            <th>Khách hàng</th>
                            <th>Email</th>
                            <th>Thời gian</th>
                            <th class="text-end">Tổng</th>
                            <th>Thanh toán</th>
                            <th>Trạng thái</th>
                            <th style="width:120px"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var it in Model.Items)
                        {
                            <tr>
                                <td class="fw-semibold">#@it.Id</td>
                                <td>@it.CustomerName</td>
                                <td class="text-muted small">@it.CustomerEmail</td>
                                <td>@it.DateTime.ToString("dd/MM/yyyy HH:mm")</td>
                                <td class="text-end fw-semibold">@it.Total.ToString("n0")</td>
                                <td>@it.PaymentMethod</td>
                                <td>
                                    @if (it.Status == "COMPLETE")
                                    {
                                        <span class="status-pill status-complete">COMPLETE</span>
                                    }
                                    else if (it.Status == "PENDING")
                                    {

                                        <span class="status-pill status-pending">PENDING</span>
                                    }
                                    else if (it.Status == "CANCELED")
                                    {

                                        <span class="status-pill status-canceled">CANCELED</span>
                                    }
                                    else
                                    {

                                        <span class="status-pill">@it.Status</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <a class="btn btn-sm btn-outline-primary" asp-page="/Staff/Orders/Details" asp-route-id="@it.Id">
                                        <i class="fa fa-eye me-1"></i>Chi tiết
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
