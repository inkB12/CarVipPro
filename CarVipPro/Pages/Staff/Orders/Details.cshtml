@page
@model CarVipPro.APrenstationLayer.Pages.Staff.Orders.DetailsModel
@{
    ViewData["Title"] = $"Chi tiết đơn hàng #{Model.Order?.Id}";
    Layout = "_Layout";
}

<style>
    .card-soft {
        border: 1px solid #eee;
        border-radius: 12px;
        box-shadow: 0 4px 16px rgba(0,0,0,.04);
    }

    .section-title {
        font-weight: 700;
        margin: 0;
    }

    .status-pill {
        padding: .25rem .6rem;
        border-radius: 999px;
        font-size: .85rem;
        border: 1px solid #e5e7eb;
    }

    .status-complete {
        background: #e8f7ef;
        color: #0a7c3a;
        border-color: #bfe8cf;
    }

    .status-pending {
        background: #fff7e6;
        color: #8a5b00;
        border-color: #ffe0a6;
    }

    .status-canceled {
        background: #fde8e8;
        color: #b42318;
        border-color: #f5b5b5;
    }
</style>

<div class="card card-soft">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h3 class="section-title"><i class="fa fa-box-open me-2"></i>Đơn hàng #@Model.Order?.Id</h3>
            <a class="btn btn-outline-secondary" asp-page="/Staff/Orders/Index"><i class="fa fa-arrow-left me-1"></i>Quay lại</a>
        </div>

        @if (!string.IsNullOrEmpty(Model.Error))
        {
            <div class="alert alert-danger"><i class="fa fa-triangle-exclamation me-1"></i>@Model.Error</div>
        }
        else if (Model.Order == null)
        {
            <div class="alert alert-warning">Không tìm thấy đơn hàng.</div>
        }
        else
        {
            <div class="row g-3 mb-4">
                <div class="col-md-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <div class="text-muted small mb-1">Khách hàng</div>
                            <div class="fw-semibold">@Model.Order.CustomerName</div>
                            <div class="text-muted small">@Model.Order.CustomerEmail</div>
                            @if (!string.IsNullOrWhiteSpace(Model.Order.CustomerPhone))
                            {
                                <div class="text-muted small">☎ @Model.Order.CustomerPhone</div>
                            }
                        </div>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="card h-100">
                        <div class="card-body">
                            <div class="row gy-2 gx-4">
                                <div class="col-md-3">
                                    <div class="text-muted small">Thời gian</div>
                                    <div>@Model.Order.DateTime.ToString("dd/MM/yyyy HH:mm")</div>
                                </div>
                                <div class="col-md-3">
                                    <div class="text-muted small">Thanh toán</div>
                                    <div>@Model.Order.PaymentMethod</div>
                                </div>
                                <div class="col-md-3">
                                    <div class="text-muted small">Trạng thái</div>
                                    @if (Model.Order.Status == "COMPLETE")
                                    {
                                        <span class="status-pill status-complete">COMPLETE</span>
                                    }
                                    else if (Model.Order.Status == "PENDING")
                                    {

                                        <span class="status-pill status-pending">PENDING</span>
                                    }
                                    else if (Model.Order.Status == "CANCELED")
                                    {

                                        <span class="status-pill status-canceled">CANCELED</span>
                                    }
                                    else
                                    {

                                        <span class="status-pill">@Model.Order.Status</span>
                                    }
                                </div>
                                <div class="col-md-3">
                                    <div class="text-muted small">Tổng</div>
                                    <div class="fw-semibold">@Model.Order.Total.ToString("n0")</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <h5 class="mb-2">Sản phẩm</h5>
            <div class="card card-soft">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table align-middle m-0">
                            <thead>
                                <tr class="text-muted small">
                                    <th>Model</th>
                                    <th>Màu</th>
                                    <th class="text-end">Đơn giá ước tính</th>
                                    <th class="text-end">Số lượng</th>
                                    <th class="text-end">Thành tiền</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var d in Model.Order.Details)
                                {
                                    <tr>
                                        <td>
                                            <div class="fw-semibold">@d.VehicleModel</div>
                                            <div class="text-muted small">@d.CompanyName • @d.CategoryName</div>
                                        </td>
                                        <td>@d.Color</td>
                                        <td class="text-end">@d.UnitPriceEstimated.ToString("n0")</td>
                                        <td class="text-end">@d.Quantity</td>
                                        <td class="text-end fw-semibold">@d.TotalPrice.ToString("n0")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
